page{
  padding-top: 95rpx;
}
.joke{
  width: 100%;
  height: 20%;
  border-bottom:1Px solid #f5f5f5; 
  padding: 30rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing:border-box; 
}
.tab{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  clear: both;
}
.Toptab{
  width: 100%;
  height: 75rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 26rpx;
  color:#333;
  font-weight: bold;
  background: #fff;
}
.Toptab view{
  float: left;
  height: 100%;
  width: 50%;
  text-align: center;
  line-height: 75rpx;
}
.active{
  color: #1da0f2;
  border-bottom:1px solid #1da0f2; 
}
.totop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 40rpx;
  right: 10rpx;
  border-radius:40rpx; 
  background: #fff;
}
