page{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  padding-top: 95rpx;
}
/* 去掉默认滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab{
  width: 100%;
  /* 设定横向滚动 */
  overflow-x: scroll;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  clear: both;
}
.Toptab{
  width: 200%;
  height: 75rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 26rpx;
  color:#333;
  font-weight: bold;
  background: #fff;
}
.Toptab view{
  float: left;
  height: 100%;
  width: 10%;
  text-align: center;
  line-height: 75rpx;
}
.active{
  color: #1da0f2;
  border-bottom:1px solid #1da0f2; 
}

.news{
  height: 20%;
  width: 100%;
  border-bottom:1px solid #f5f5f5; 
  overflow: hidden;
  margin-bottom: 20rpx;
}
.news_img{
height: 100%;
width:30%;
}
.news_img image{
  display: block;
  height:200rpx;
  width: 100%; 
  float: left;
}

.news_title{
  height: 82rpx;
  width: 68%;
  float: right;
  color: #333;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}
.news_date{
width: 34%;
font-size: 22rpx;
color: #999ea6;
float: left;
font-weight: bold;
text-indent: 1em;
}
.news_author{
  width: 35%;
  font-size: 22rpx;
  color: #999ea6;
  float: right;
  font-weight:bold; 
}
.totop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 40rpx;
  right: 10rpx;
  border-radius:40rpx; 
  background: #fff;
}